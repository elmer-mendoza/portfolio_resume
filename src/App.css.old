*::after,*::before {
    padding: 0;
}
.hero{
    background: 
        linear-gradient(180deg,rgba(255, 0, 0, 0),rgba(255, 255, 255, 0),rgba(255, 255, 255, 0),white),
        url('./Components/backgroundImage/self.jpg') ;
    background-size:cover;
    background-position-x: center;
    background-repeat: no-repeat;
    width: auto;
    height:100vh;
 }
@media screen and (min-width:758px) {
    .navbar {
        padding: .5rem 100px !important;
    }
}
.hero h2 {
    margin-top:80vh;
    background-color: rgba(255, 255, 255, 0.123) !important;
}
.card {
    border:none !important;
    box-shadow:0 5px 15px rgba(0, 0, 0, 0.2);
    width: 200px;
 }
 .hero img {
     height:auto;
     width:100%;
     justify-content: center;

 }

.card-img-top:hover{
     
    border: solid 2px rgba(41, 37, 37, 0);
   filter:grayscale(100%);
   -webkit-filter:grayscale(100%) ;
   transition: filter 0.5% ease-in-out; 
 }
 .card-img {
     position:relative;
     overflow: hidden;
     margin-left: 0px !important;

 }



.card-img .link {
    
    padding:10px 50px;
    position: absolute;
    bottom:-50%;
    color:#fff;
    z-index: 1;
    transition: 0.6s;

}
.card-img:hover .link {
    bottom:10px;
    
}
.link a{
    padding: .3rem;
    color: white;
}






    
